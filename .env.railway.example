# Variables d'environnement pour Railway (Backend)
# À configurer dans Railway Dashboard → Variables

# Node
NODE_ENV=production
PORT=3001

# Database (Railway auto-generates these)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis (Railway auto-generates these)
REDIS_HOST=${{Redis.REDIS_HOST}}
REDIS_PORT=${{Redis.REDIS_PORT}}
REDIS_PASSWORD=${{Redis.REDIS_PASSWORD}}

# JWT
# Générer avec: openssl rand -base64 48
JWT_SECRET=your-jwt-secret-here-minimum-48-characters-long
JWT_EXPIRES_IN=7d

# Encryption
# Générer avec: openssl rand -base64 32 | head -c 32
ENCRYPTION_KEY=your-32-character-encryption-key

# GitHub OAuth
# Créer sur: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}/api/auth/github/callback

# Frontend URL (Vercel)
FRONTEND_URL=https://your-app.vercel.app

# AWS (optionnel)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Azure (optionnel)
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# GCP (optionnel)
GCP_PROJECT_ID=
GCP_CLIENT_EMAIL=
GCP_PRIVATE_KEY=

# Proxmox (optionnel)
PROXMOX_HOST=
PROXMOX_USER=
PROXMOX_PASSWORD=

# VMware (optionnel)
VMWARE_HOST=
VMWARE_USER=
VMWARE_PASSWORD=
